#!/bin/sh
# PCP QA Test No. 1204
# pmlogctl - basic functionality
#
# Copyright (c) 2020 Ken McDonell.  All Rights Reserved.
#

seq=`basename $0`
echo "QA output created by $seq"

# get standard environment, filters and checks
. ./common.product
. ./common.filter
. ./common.check

if pmlogctl -c default status localhost 2>&1 | grep '^localhost.* default' >/dev/null
then
    _notrun "pmlogger already running for host localhost and class default"
fi

_cleanup()
{
    echo "_cleanup: ..." >>$seq.full
    cd $here
    $sudo pmlogctl -f -c default destroy localhost >>$seq.full 2>&1
    $sudo rm -rf $tmp $tmp.*
    $sudo rm -rf $PCP_ARCHIVE_DIR/localhost

}

status=1	# failure is the default!
$sudo rm -rf $tmp $tmp.* $seq.full
trap "_cleanup; exit \$status" 0 1 2 3 15

_filter()
{
    tee -a $seq.full \
    | sed \
	-e '/^# created by pmlogctl/s/ on .*/ on DATE/' \
	-e "s;$tmp\.;TMP.;g" \
	-e "s;$PCP_ARCHIVE_DIR/;PCP_ARCHIVE_DIR/;g" \
	-e "s;$PCP_TMP_DIR/;PCP_TMP_DIR/;g" \
	-e "s;$PCP_TMPFILE_DIR/pmlogctl\.[^/]*;PCP_TMPFILE_DIR/pmlogctl.XXXXX;g" \
	-e "s;$PCP_ETC_DIR/;PCP_ETC_DIR/;g" \
    # end
}

_filter_status()
{
    tee -a $seq.full \
    | sed \
	-e "/^`hostname` .* primary /d" \
	-e 's/[ 	][ 	]*/ /g' \
	-e 's/2[0-9][0-9][0-9][01][0-9][0-3][0-9]\...\.[^ ]*/<archivename>/' \
	-e 's/[0-9][0-9]*/<pid>/' \
    # end
}

# real QA test starts here
echo "== create with -n" | tee -a $seq.full
pmlogctl -n -v create localhost | _filter

echo | tee -a $seq.full
echo "== create" | tee -a $seq.full
$sudo pmlogctl create localhost | _filter | _filter
echo "== status" | tee -a $seq.full
pmlogctl status | _filter_status
echo "== status localhost" | tee -a $seq.full
pmlogctl status localhost | _filter_status

echo | tee -a $seq.full
echo "== stop" | tee -a $seq.full
$sudo pmlogctl stop localhost | _filter | _filter
echo "== status" | tee -a $seq.full
pmlogctl status | _filter_status
echo "== status localhost" | tee -a $seq.full
pmlogctl status localhost | _filter_status

echo | tee -a $seq.full
echo "== start" | tee -a $seq.full
$sudo pmlogctl start localhost | _filter | _filter
echo "== status" | tee -a $seq.full
pmlogctl status | _filter_status
echo "== status localhost" | tee -a $seq.full
pmlogctl status localhost | _filter_status

echo | tee -a $seq.full
echo "== restart" | tee -a $seq.full
$sudo pmlogctl restart localhost | _filter | _filter
echo "== status" | tee -a $seq.full
pmlogctl status | _filter_status
echo "== status localhost" | tee -a $seq.full
pmlogctl status localhost | _filter_status

echo | tee -a $seq.full
echo "== destroy" | tee -a $seq.full
$sudo pmlogctl destroy localhost | _filter | _filter
echo "== status" | tee -a $seq.full
pmlogctl status | _filter_status
echo "== status localhost" | tee -a $seq.full
pmlogctl status localhost | _filter_status

# success, all done
status=0
exit
