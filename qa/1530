#!/bin/sh
# PCP QA Test No. 1530
# Test Linux ZFS PMDA with valgrind
#

seq=`basename $0`
echo "QA output created by $seq"

# get standard environment, filters and checks
. ./common.product
. ./common.filter
. ./common.check

_check_valgrind
[ $PCP_PLATFORM = linux ] || _notrun "Linux ZFS PMDA is Linux-specific (uses procfs)"

status=1
$sudo rm -rf $tmp.* $seq.full
trap "cd $here; $sudo rm -rf $tmp.*; exit \$status" 0 1 2 3 15

_filter()
{
    $here/src/sortinst \
    | sed -e '/inst /s/\[[01] /[0-or-1 /'
}


root=$tmp.root
pmda=$PCP_PMDAS_DIR/zfs/pmda_zfs.so,zfs_init
tgz=$here/linux/zfs-stats.tgz
$sudo rm -fr $root
mkdir $root || _fail "root in use when processing $tgz"
cd $root
$sudo tar xzf $tgz
export ZFS_PATH=$root/zfs
echo "== Valgrind checking metric descriptors and values"
_run_valgrind pminfo -L -K clear -K add,153,$pmda -dfmtT zfs 2>&1 | _filter
echo && echo "== done" && echo
cd $here

# success, all done
status=0
exit
