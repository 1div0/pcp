[Unit]
Description=Performance Metrics Archive Logger
Documentation=man:pmlogger(1)
After=network-online.target pmcd.service
BindsTo=pmlogger_daily.timer pmlogger_daily_check.timer pmlogger_daily_poll.timer
BindsTo=pmlogger_daily_report.timer pmlogger_daily_report_poll.timer

[Service]
Type=forking
Restart=always
ExecStart=@PCP_RC_DIR@/pmlogger start
ExecStop=@PCP_RC_DIR@/pmlogger stop
PIDFile=@PCP_RUN_DIR@/pmlogger.pid

[Install]
WantedBy=multi-user.target
