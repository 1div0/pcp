#
# pcp-dstat(1) configuration file - see pcp-dstat.conf(5)
#

[tcp]
label = tcp sockets
width = 4
printtype = d
listen = lis
listen.formula = network.tcpconn.listen
active = act
active.formula = network.tcpconn.established
syn = syn
syn.formula = network.tcpconn.syn_sent + network.tcpconn.syn_recv + network.tcpconn.last_ack
wait = tim
wait.formula = network.tcpconn.time_wait
close = clo
close.formula = network.tcpconn.fin_wait1 + network.tcpconn.fin_wait2 + network.tcpconn.close + network.tcpconn.close_wait + network.tcpconn.closing

