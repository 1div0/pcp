[socket]
label = sockets
width = 4
printtype = d
total = tot
total.formula = network.sockstat.total
tcp = tcp
tcp.formula = network.sockstat.tcp.inuse
udp = udp
udp.formula = network.sockstat.udp.inuse
raw = raw
raw.formula = network.sockstat.raw.inuse
frag = frg
frag.formula = network.sockstat.frag.inuse

[socket6]
label = sockets
width = 4
printtype = d
tcp = tcp6
tcp.formula = network.sockstat.tcp6.inuse
udp = udp6
udp.formula = network.sockstat.udp6.inuse
raw = raw6
raw.formula = network.sockstat.raw6.inuse
frag = frg6
frag.formula = network.sockstat.frag6.inuse

