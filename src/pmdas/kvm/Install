# Install the kvm PMDA and/or PMNS
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=kvm
pmda_interface=6
dso_opt=true

if ! test -d /sys/kernel/debug; then
    echo "DEBUGFS not enabled in your kernel"
    status=1
    exit
fi
if ! test -d /sys/kernel/debug/kvm; then
    echo "KVM statistics unavailable (load kvm module and mount debugfs)"
    status=1
    exit
fi
if ! test -d /sys/kernel/debug/tracing/events/kvm; then
    echo -e "TRACEFS(/sys/kernel/debug/tracing/events/kvm) is not enabled,\n\
Please enable it or specify the enabled path at /var/lib/pcp/pmdas/kvmstat/trace_kvm.conf"
    status=1
    exit
fi

pmdaSetup
pmdaInstall
exit 0
